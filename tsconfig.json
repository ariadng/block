{
	"compilerOptions": {
		"jsx": "react",
		"declaration": true,
		"noEmit": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": "src",
		"strict": true,
		"lib": [
			"esnext",
			"dom"
		],
		"esModuleInterop": true,
		"paths": {
			"@/*": [ "./*" ]
		}
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	}
}