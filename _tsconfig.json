{
	"compilerOptions": {
		"jsx": "react",
		"declaration": true,
		"noEmit": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "src",
		"baseUrl": "src",
		"strict": true,
		"lib": [
			"esnext",
			"dom"
		],
		"esModuleInterop": true,
		"paths": {
			"@/*": [ "./*" ]
		},
		"target": "ES2016",
		"module": "CommonJS",
		"skipLibCheck": true
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}